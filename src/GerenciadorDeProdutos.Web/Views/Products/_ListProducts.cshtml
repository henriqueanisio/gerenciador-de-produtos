@model IEnumerable<GerenciadorDeProdutos.Web.ViewModels.ProductViewModel>

<form asp-action="Index" method="get">
    <spam> Filtrar por: </spam>
    <div class="form-group">
        <label class="control-label">
            Descrição
        </label>

        <input class="form-control" type="text" name="SearchDescription" />
    </div>
    <div class="form-group">
        <label class="control-label">Categoria</label>
        <select class="form-control selectpicker" name="IdsCategories" asp-items="@(new SelectList(ViewBag.UsedCategories, "Id", "Name"))" multiple>
        </select>

    </div>
    <div class="form-group">
        <label class="control-label">Situação</label>
        <select class="form-control" name="Situation">
            <option value="true"> Ativo</option>
            <option value="false"> Inativo</option>
        </select>

    </div>
    <a asp-action="Index">Resetar Filtros</a> <p>
        <input type="submit" value="Filtrar" class="btn btn-info" style="float: right" />
    </p>

</form>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @foreach (var category in item.Categories)
                    {
                        @Html.DisplayFor(modelItem => category.Name)
                        ;
                    }
                </td>
                <td>
                    @item.Price.ToString("C")
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.Situation,new { @class = "form-check-input" })
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                    <form asp-action="Delete" asp-route-id="@item.Id">
                        <button class="btn btn-danger" type="submit"> <spam class="fa fa-trash"></spam> </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
